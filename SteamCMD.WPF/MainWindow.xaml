<Window x:Class="SteamCMD.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamCMD.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="993">
    <Grid>
        <TextBox x:Name="TextBoxOutput" TextWrapping="Wrap" Background="Black" Foreground="White" FontFamily="Consolas" FontSize="14" IsReadOnly="True" Margin="0,0,0,22" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="TextBoxInput" TextWrapping="Wrap" Background="Black" Foreground="White" FontFamily="Consolas" FontSize="14" Height="22" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
